<div class="container">
<div class="row">

<div class="col-xs-3">
  <%= render 'users/list', user:@user, book:@book %>
</div>

<div class="col-xs-9">

<h2>Books</h2>
<table class="table table-hover table-incerse">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan = 3></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= link_to book_path(book.id) do %>
      <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg", class: "no-image" %></td>
      <% end %>
      <td><%=link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
      <% end %>
   </tr>
  </tbody>
</table>

</div>
</div>
</div>