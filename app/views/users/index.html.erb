<div class="container">
<div class="row">

<div class="col-xs-3">
  <%= render 'users/list', user:@user, book:@book %>
</div>

<div class="col-xs-9">
<h2>Users</h2>
<table class="table table-hover table-incerse">
  <thead>
    <tr>image</tr>
    <tr>name</tr>
    <tr colspan=3></tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></td>
      <td><%= user.name %></td>
      <td><%= link_to "Show", user_path(user) %></td>
      <% end %>
    </tr>
  </tbody>
</table>

</div>
</div>
</div>