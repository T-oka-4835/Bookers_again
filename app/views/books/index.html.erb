<div class="container">
<div class="row">

<div class="col-xs-3">
  <%= render 'users/list', user: @user, book: @book %>
</div>

<div class="col-xs-9">

<h2>Books</h2>
<table class="table table-hover table-incerse">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td>
          <%= link_to (book.user) do %>
          <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpeg" %>
        </td>
        <% end %>
        <td><%= link_to book.title, book_path(book) %></td>
        <td><%= book.body %></td>
        <% end %>
      </tr>
  </tbody>
</table>

</div>
</div>
</div>